<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offWhite">

        <TextView
            android:id="@+id/signinText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:text="Register Here"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_40sp"
            app:fontFamily="@font/lato_black" />


        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/signinText"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:fontFamily="@font/circular_std_medium_family"
            android:hint="Email"
            android:textColorHint="#2a9fff"

            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/emailEditText"

            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:fontFamily="@font/circular_std_medium_family"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textColorHint="#2a9fff"

            android:textSize="@dimen/dimen_16sp" />

        <EditText
            android:id="@+id/nameEditText"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/passwordEditText"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:fontFamily="@font/circular_std_medium_family"
            android:hint="Name"
            android:textColorHint="#2a9fff"

            android:paddingLeft="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/nameEditText"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:fontFamily="@font/circular_std_medium_family"
            android:textColorHint="#2a9fff"

            android:hint="Phone number"
            android:paddingLeft="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp" />

        <EditText
            android:id="@+id/cityEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/phoneEditText"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:fontFamily="@font/circular_std_medium_family"
            android:hint="City"
            android:textColorHint="#2a9fff"
            android:paddingLeft="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/common_button"
            android:fontFamily="@font/circular_std_medium_family"
            android:text="Next"
            android:textSize="@dimen/dimen_16sp" />


    </RelativeLayout>
</layout>