<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" tools:context=".LoginActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offWhite"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Here"
            android:id="@+id/signinText"
            android:textSize="@dimen/dimen_40sp"
            android:textColor="@color/black"
            app:fontFamily="@font/lato_black"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:layout_marginLeft="@dimen/dimen_32dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:id="@+id/emailEditText"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/circular_std_medium_family"
            android:textColor="@color/black"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:layout_below="@id/signinText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/circular_std_medium_family"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_below="@id/emailEditText"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_16dp"

            android:id="@+id/passwordEditText"
            />
        <EditText
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/circular_std_medium_family"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_below="@id/passwordEditText"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:paddingLeft="@dimen/dimen_16dp"

            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:id="@+id/nameEditText"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/circular_std_medium_family"
            android:textColor="@color/black"
            android:id="@+id/phoneEditText"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:layout_below="@id/nameEditText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/circular_std_medium_family"
            android:textColor="@color/black"
            android:layout_below="@id/phoneEditText"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_32dp"
            android:layout_marginRight="@dimen/dimen_32dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:background="@drawable/common_edittext"
            android:elevation="@dimen/dimen_8dp"
            android:id="@+id/cityEditText"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/circular_std_medium_family"
            android:id="@+id/nextButton"
            android:layout_below="@id/cityEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:background="@drawable/common_button"
            />


    </RelativeLayout>
</layout>